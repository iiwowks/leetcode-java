{
    "files.exclude": {
        "**/.git": true,
        "**/.idea": true,
        "**/out": true,
        "**/*.exe": true,
        "**/.gitignore": true,
        "**/LICENSE": true,
        "**/.gitbook.yaml": true,
        "**/.gitpod.yml": true,
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },
    "python.pythonPath": "/usr/bin/python",
    // 用来配置源代码文件存放目录及文件名
    "leetcode.filePath": {
        "default": {
            "folder": "",
            "filename": "${id}.${kebab-case-name}.${ext}"
        },
        "java": {
            "folder": "${tag}",
            "filename": "${id}-${kebab-case-name}.${ext}"
        }
    }
}